	<groupId>com.baijob</groupId>
	<artifactId>commonTools</artifactId>
	<packaging>jar</packaging>
	<version>1.3</version>
	<name>commonTools</name>
	<url>http://www.baijob.com</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<licenses>
